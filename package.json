{
  "name": "vscode-arduino",
  "displayName": "VSCode Arduino",
  "description": "",
  "version": "0.0.3",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./build/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "arduino",
          "title": "Arduino",
          "icon": "resources/arduino.svg"
        }
      ]
    },
    "views": {
      "arduino": [
        {
          "id": "comPortView",
          "name": "Com Ports"
        },
        {
          "id": "boardSelectorView",
          "name": "Board Selector"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "comPortSelector.command1",
          "when": "viewItem == comPortView && viewItemContext == comPortItem",
          "group": "inline"
        },
        {
          "command": "comPortSelector.command2",
          "when": "viewItem == comPortView && viewItemContext == comPortItem",
          "group": "inline"
        },
        {
          "command": "boardSelector.selectBoard",
          "when": "viewItem == boardSelectorView && viewItemContext == board",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "comPortSelector.refresh",
          "when": "view == comPortView",
          "group": "navigation"
        },
        {
          "command": "boardSelector.refresh",
          "when": "view == boardSelectorView",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-arduino.compile",
        "title": "Compile",
        "category": "Arduino"
      },
      {
        "command": "vscode-arduino.upload",
        "title": "Upload",
        "category": "Arduino"
      },
      {
        "command": "vscode-arduino.port",
        "title": "Set Port",
        "category": "Arduino"
      },
      {
        "command": "vscode-arduino.boardconfig",
        "title": "Configure Board",
        "category": "Arduino"
      },
      {
        "command": "vscode-arduino.boardselect",
        "title": "Select a Board",
        "category": "Arduino"
      },
      {
        "command": "comPortSelector.refresh",
        "title": "Refresh COM Ports",
        "icon": "$(refresh)"
      },
      {
        "command": "comPortSelector.selectPort",
        "title": "Select COM Port"
      },
      {
        "command": "comPortSelector.command1",
        "title": "Execute Command 1"
      },
      {
        "command": "comPortSelector.command2",
        "title": "Execute Command 2"
      },
      {
        "command": "boardSelector.selectBoard",
        "title": "Select Board"
      },
      {
        "command": "boardSelector.refresh",
        "title": "Refresh Boards",
        "icon": "$(refresh)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "vite build",
    "watch": "vite build --watch",
    "package": "vite build --mode production",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.5.4",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "vite": "^5.4.3"
  },
  "dependencies": {
    "latest": "^0.2.0"
  }
}
