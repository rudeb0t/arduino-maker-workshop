{
  "name": "vscode-arduino",
  "displayName": "VSCode Arduino",
  "publisher": "TheLastOutpostWorkshop",
  "description": "",
  "version": "0.0.3",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./build/extension.js",
  "contributes": {
    "configuration": {
      "id":"arduinoclipath",
      "type": "object",
      "title": "Arduino CLI Settings",
      "properties": {
        "cli.path": {
          "type": "string",
          "default": "",
          "description": "The path to the arduino-cli command line utility.",
          "scope": "window"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "arduino",
          "title": "Arduino",
          "icon": "resources/activity.png"
        }
      ]
    },
    "views": {
      "arduino": [
        {
          "id": "quickAccessView",
          "name": "Quick Access"
        }
      ]
    },
    "activationEvents": [
      "onView:quickAccessView",
      "onCommand:extension.openVueWebview",
      "onCommand:vscode-arduino.compile",
      "onCommand:vscode-arduino.upload"
    ],
    "commands": [
      {
        "command": "extension.openVueWebview",
        "title": "Arduino Home",
        "category": "Arduino"
      },
      {
        "command": "vscode-arduino.compile",
        "title": "Compile",
        "category": "Arduino"
      },
      {
        "command": "vscode-arduino.upload",
        "title": "Upload",
        "category": "Arduino"
      },
      {
        "command": "vscode-arduino.port",
        "title": "Set Port",
        "category": "Arduino"
      },
      {
        "command": "vscode-arduino.boardconfig",
        "title": "Configure Board",
        "category": "Arduino"
      },
      {
        "command": "vscode-arduino.boardselect",
        "title": "Select a Board",
        "category": "Arduino"
      },
      {
        "command": "comPortSelector.refresh",
        "title": "Refresh COM Ports",
        "icon": "$(refresh)"
      },
      {
        "command": "comPortSelector.selectPort",
        "title": "Select COM Port"
      },
      {
        "command": "comPortSelector.command1",
        "title": "Execute Command 1"
      },
      {
        "command": "comPortSelector.command2",
        "title": "Execute Command 2"
      },
      {
        "command": "boardSelector.selectBoard",
        "title": "Select Board"
      },
      {
        "command": "boardSelector.refresh",
        "title": "Refresh Boards",
        "icon": "$(refresh)"
      },
      {
        "command": "boardSelector.filterBoards",
        "title": "Filter Boards",
        "icon": "$(search)"
      },
      {
        "command": "boardSelector.clearFilter",
        "title": "Clear Filter",
        "icon": "$(close)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "vite build",
    "watch": "vite build --watch",
    "package": "vite build --mode production",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build:vue": "cd vue_webview && npm run build",
    "vueapp": "cd vue_webview && npm run dev"

  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.5.4",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "vite": "^5.4.3"
  },
  "dependencies": {
    "latest": "^0.2.0"
  }
}
