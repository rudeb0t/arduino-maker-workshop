{
  "name": "vscode-arduino",
  "displayName": "VSCode Arduino",
  "publisher": "TheLastOutpostWorkshop",
  "description": "",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./build/extension.js",
  "contributes": {
    "configuration": {
      "id": "arduino_settings",
      "type": "object",
      "title": "Arduino Settings",
      "properties": {
        "additionalBoardsUrl": {
          "type": "string",
          "default": "",
          "description": "URLs for additional Arduino boards (separated by comma)",
          "scope": "window"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "arduino",
          "title": "Arduino",
          "icon": "resources/arduino.svg"
        }
      ]
    },
    "views": {
      "arduino": [
        {
          "id": "quickAccessView",
          "name": "Quick Access"
        }
      ]
    },
    "activationEvents": [
      "onView:quickAccessView"
    ],
    "commands": [
      {
        "command": "extension.openVueWebview",
        "title": "Arduino Home",
        "category": "Arduino"
      },
      {
        "command": "quickAccessView.compile",
        "title": "Compile",
        "category": "Arduino"
      },
      {
        "command": "compile.clean",
        "title": "Compile (clean)",
        "category": "Arduino"
      },
      {
        "command": "quickAccessView.upload",
        "title": "Upload",
        "category": "Arduino"
      },
      {
        "command": "intellisense",
        "title": "Generate intellisense",
        "category": "Arduino"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "vite build",
    "watch": "vite build --watch",
    "package": "vite build --mode production",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build:vue": "cd vue_webview && npm run build",
    "vueapp": "cd vue_webview && npm run dev"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.5.4",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "vite": "^5.4.3"
  },
  "dependencies": {
    "@microsoft/vscode-serial-monitor-api": "^0.1.7",
    "latest": "^0.2.0",
    "usb": "^2.14.0"
  }
}
